	"item": [
		{
			"name": "1. Create Job Post",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"companyId\": \"{{companyId}}\",\n  \"title\": \"Senior Backend Developer\",\n  \"description\": \"We are looking for an experienced backend developer with strong skills in Java and Spring Boot. The ideal candidate will have 5+ years of experience building scalable microservices.\",\n  \"salaryType\": \"RANGE\",\n  \"salaryMin\": 80000,\n  \"salaryMax\": 120000,\n  \"salaryNote\": \"USD per year\",\n  \"locationCity\": \"San Francisco\",\n  \"isFresher\": false,\n  \"isAPrivate\": false,\n  \"employmentType\": \"FULL_TIME\",\n  \"expiryAt\": \"2025-06-30T23:59:59\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/api/job-posts",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"job-posts"
					]
				},
				"description": "Create a new job post. Returns the created job post with generated ID."
			},
			"response": []
		},
		{
			"name": "2. Get Job Post by ID",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/job-posts/{{jobPostId}}",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
